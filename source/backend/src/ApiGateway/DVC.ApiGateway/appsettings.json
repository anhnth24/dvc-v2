{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "users": {
        "ClusterId": "usersCluster",
        "Match": { "Path": "/api/users/{**catch-all}" }
      },
      "auth": {
        "ClusterId": "usersCluster",
        "Match": { "Path": "/api/auth/{**catch-all}" }
      },
      "workflow": {
        "ClusterId": "workflowCluster",
        "Match": { "Path": "/api/workflow/{**catch-all}" }
      },
      "documents": {
        "ClusterId": "documentCluster",
        "Match": { "Path": "/api/documents/{**catch-all}" }
      },
      "notifications": {
        "ClusterId": "notificationCluster",
        "Match": { "Path": "/api/notifications/{**catch-all}" }
      },
      "postal": {
        "ClusterId": "postalCluster",
        "Match": { "Path": "/api/postal/{**catch-all}" }
      }
    },
    "Clusters": {
      "usersCluster": {
        "Destinations": {
          "d1": { "Address": "http://localhost:5101/" }
        }
      },
      "workflowCluster": {
        "Destinations": {
          "d1": { "Address": "http://localhost:5201/" }
        }
      },
      "documentCluster": {
        "Destinations": {
          "d1": { "Address": "http://localhost:5301/" }
        }
      },
      "notificationCluster": {
        "Destinations": {
          "d1": { "Address": "http://localhost:5401/" }
        }
      },
      "postalCluster": {
        "Destinations": {
          "d1": { "Address": "http://localhost:5501/" }
        }
      }
    }
  }
}
